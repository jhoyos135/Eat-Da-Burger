<div class="container text-center">
    <div class="header">
        <h1 class="text-center center">Eat a Burgers</h1>
    </div>

    <div class="row">

        <div class="col-md-6">
            <h3 class="boxCaption">Not yet devoured:</h3>
            <hr />
        <div class="row">
            {{#each burgers}}
                {{#unless devoured}}
 
            <div class="col-lg-2">
                <i class="fas fa-hamburger fa-3x"></i>
            </div>
            <div class="col-lg-4">
                   <h4> {{burger_name}} </h4>
            </div>
            <div class="col-lg-6">
            <button class="btn btn-md btn-primary devourUndevour devour" data-id="{{id}}" data-devoured="{{devoured}}">Devour!</button>
            <button class="btn btn-md btn-danger deleteBurger" data-id="{{this.id}}">X</button>
            </div>
            <hr class="col-lg-12" />
                {{/unless}}
            {{/each}}
        </div>
        
        </div>

        <div class="col-md-6">
                  <h2 class="boxCaption">Devoured:</h2>
      <hr />
           <div class="row">
      {{#each burgers}}
        {{#if devoured}}
            <div class="col-lg-2">
                <i class="fas fa-hamburger fa-3x"></i>
            </div>   
            <div class="col-lg-4">
            <h4> {{burger_name}} </h4>
            </div>
            <div class="col-lg-6">
             <button class="btn btn-md btn-primary devourUndevour undevour" data-id="{{id}}" data-devoured="{{devoured}}">Un-devour?</button>
            <button class="btn btn-md btn-danger deleteBurger" data-id="{{this.id}}">X</button>
            </div>
            <hr class="col-lg-12" />
        {{/if}}
      {{/each}}
    </div>

        </div>
</div>

 <div id="addBurger">
    <h2 class="boxCaption">Add a Burger</h2>
    <hr>
    <form class="burgerForm">

      <div class="form-group">
        <label for="burger_name">Burger Name:</label>
        <input type="text" id="burger_name" name="burger_name">
        <br>
        <input type="radio" name="devoured" value="1"> Devoured!
        <input type="radio" name="devoured" value="0" checked> Not Devoured!
      </div>

      <button id="burgerButton" type="submit">Add Burger</button>
    </form>
  </div>
</div>





