<div class="container-fluid text-center">
    <div class="header">
        <h1 class="text-center center display-4">Eat a Burger</h1>
    </div>
<div class="row mb-3 mt-3">
    <div class="col-md-12">
<div id="addBurger">
    <form class="burgerForm form-inline">
      <div class="form-group mb-2">
        <label for="burger_name" class="sr-only">Burger Name:</label>
        <input type="text" id="burger_name" name="burger_name form-control-plaintext" placeholder="Add a burger..." class="form-control">
    <div class="form-check">
        <input type="radio" name="devoured" value="0" checked class="form-check-input" /> 
        Don't Eat
        <input type="radio" name="devoured" value="1" class="form-check-input">
        Eat
    </div>
         </div>
      <button id="burgerButton" class="btn btn-success mb-2 ml-3" type="submit">Add Burger</button>
    </form>
  </div>
    </div>
</div>

    <div class="row">
        
        <div class="col-md-6 scrollable">
            <h3 class="boxCaption">Not Yet Eaten:</h3>
            <hr />
        <div class="row">
            {{#each burgers}}
                {{#unless devoured}}
 
            <div class="col-lg-2">
                <i class="fas fa-hamburger fa-3x"></i>
            </div>
            <div class="col-lg-4">
                   <p> {{burger_name}} </p>
            </div>
            <div class="col-lg-6">
            <button class="btn btn-md btn-primary devourUndevour devour" data-id="{{id}}" data-devoured="{{devoured}}">Eat</button>
            <button class="btn btn-md btn-danger deleteBurger" data-id="{{this.id}}">X</button>
            </div>
            <hr class="col-lg-12" />
                {{/unless}}
            {{/each}}
        </div>
        
        </div>

        <div class="col-md-6 scrollable">
            <h2>Devoured:</h2>
      <hr />
           <div class="row">
      {{#each burgers}}
        {{#if devoured}}
            <div class="col-lg-2">
                <i class="fas fa-hamburger fa-3x"></i>
            </div>   
            <div class="col-lg-4">
            <p> {{burger_name}} </p>
            </div>
            <div class="col-lg-6">
             <button class="btn btn-md btn-primary devourUndevour undevour" data-id="{{id}}" data-devoured="{{devoured}}">Eat Again</button>
            <button class="btn btn-md btn-danger deleteBurger" data-id="{{this.id}}">X</button>
            </div>
            <hr class="col-lg-12" />
        {{/if}}
      {{/each}}
    </div>

        </div>
</div>

</div>





